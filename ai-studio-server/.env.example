# SMS Provider Configuration
# Choose 'twilio' or 'msg91'
SMS_PROVIDER=msg91

# Twilio Configuration (if SMS_PROVIDER is 'twilio')
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# MSG91 Configuration (if SMS_PROVIDER is 'msg91')
MSG91_AUTH_KEY=your_msg91_auth_key
MSG91_TEMPLATE_ID=your_msg91_template_id

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Application Port
PORT=3000

# JWT Configuration
.env.example
MONGO_URI=
JWT_SECRET=

# Credits System
CREDITS_SIGNUP_BONUS=5
PAYMENT_PROVIDER_MODE=mock # mock or razorpay

# Razorpay (only required if PAYMENT_PROVIDER_MODE=razorpay)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=
RAZORPAY_ACCOUNT_MODE=test # test or live

